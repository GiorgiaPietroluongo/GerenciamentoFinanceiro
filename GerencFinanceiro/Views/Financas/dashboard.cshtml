@{
    ViewData["Title"] = "Dashboard de Finanças";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Dashboard de Finanças</h2>
        <div id="dashboardData">
            <!-- Os dados do dashboard serão carregados aqui -->
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Financas/GetDashboardData",
                success: function (response) {
                    if (response && response.Despesas && response.Receitas) {
                        var despesasHtml = "<h4>Despesas</h4><ul>";
                        response.Despesas.forEach(function (item) {
                            despesasHtml += "<li>Mês: " + item.Mes + ", Total: " + item.Total.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) + "</li>";
                        });
                        despesasHtml += "</ul>";

                        var receitasHtml = "<h4>Receitas</h4><ul>";
                        response.Receitas.forEach(function (item) {
                            receitasHtml += "<li>Mês: " + item.Mes + ", Total: " + item.Total.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) + "</li>";
                        });
                        receitasHtml += "</ul>";

                        $("#dashboardData").html(despesasHtml + receitasHtml);
                    } else {
                        $("#dashboardData").html("<p>Dados do dashboard não disponíveis.</p>");
                    }
                },
                error: function (err) {
                    $("#dashboardData").html("<p>Erro ao carregar os dados do dashboard.</p>");
                }
            });
        });

    </script>
</body>
</html>
