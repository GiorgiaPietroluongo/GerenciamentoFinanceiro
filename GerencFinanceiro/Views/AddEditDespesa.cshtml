@model GerencFinanceiro.Models.Financas
@using (Html.BeginForm("Create", "Despesa", FormMethod.Post, new { id = "despesaForm" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ItemNome)
        @Html.TextBoxFor(model => model.ItemNome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Valor)
        @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Categoria)
        @Html.DropDownListFor(model => model.Categoria, new SelectList(ViewBag.Categorias), "Selecione", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
}
